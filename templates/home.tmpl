{{template "base/head" .}}
<div class="home">
	<div class="ui stackable middle very relaxed page grid">
		<div class="sixteen wide center aligned centered column">
			<div>
				<img class="logo" src="{{StaticUrlPrefix}}/img/gitea-lg.png" />
			</div>
			<div class="hero">
				<h1 class="ui icon header title">
					{{AppName}}
				</h1>
				<h2>{{.i18n.Tr "startpage.app_desc" | Str2html}}</h2>
			</div>
		</div>
	</div>
	<div class="ui stackable middle very relaxed page grid">
		<div class="eight wide center column">
			<h1 class="hero ui icon header">
				{{svg "octicon-info"}} {{.i18n.Tr "startpage.info"}}
			</h1>
			<p class="large">
				{{.i18n.Tr "startpage.info_desc" | Str2html}}
			</p>
		</div>
		<div class="eight wide center column">
			<h1 class="hero ui icon header">
				{{svg "octicon-rocket"}} {{.i18n.Tr "startpage.work"}}
			</h1>
			<p class="large">
				{{.i18n.Tr "startpage.work_desc" | Str2html}}
			</p>
		</div>
	</div>
	<div class="ui stackable middle very relaxed page grid">
		<div class="eight wide center column">
			<h1 class="hero ui icon header">
				{{svg "octicon-milestone"}} {{.i18n.Tr "startpage.influence"}}
			</h1>
			<p class="large">
				{{.i18n.Tr "startpage.influence_desc" | Str2html}}
			</p>
		</div>
		<div class="eight wide center column">
			<h1 class="hero ui icon header">
				{{svg "octicon-report"}} {{.i18n.Tr "startpage.report"}}
			</h1>
			<p class="large">
				{{.i18n.Tr "startpage.report_desc" | Str2html}}
			</p>
		</div>
	</div>
</div>
{{template "base/footer" .}}
